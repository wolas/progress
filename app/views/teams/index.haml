- content_for :title do
  Teams &amp; users
  
.groups{:style => "border: 1px solid #aaaaaa; min-height: 500px; "}
  .groups_header{:style => "height: 30px;background-color: #ededed; padding: 5px;"}
    = link_to_remote "New group", :url => {:controller => "teams", :action => "new"}, :update => "#user_manager_interactive", :loading => flash_loader(:user_manager_interactive)
  
  %div{:style => "float: left; width: 32%; border: 1px solid red;min-height:400px;"}
    %table{:style => "width:100%; padding: 5px;"}
      - @teams.each do |team|
        %tr
          %td{:style => "width:80%;"}= team.name
          %td{:style => "width:10%;text-align: right;color: #777777"}= team.users.count
  
  %div{:style => "float: left; width: 32%; border: 1px solid red;min-height:400px;"}
    Bar
  
  %div{:style => "float: left; width: 32%; border: 1px solid red;min-height:400px;"}
