%table
  - users.each do |user|
    %tr
      %td
        %span
          = render :partial => "users/widget", :locals => {:user => user}
          = link_to_remote image_tag('accept.png'), :url => {:controller => 'users', :action => :add_user, :object_id => object, :object_class => object.class, :user => user}, :update => 'manage_users'
