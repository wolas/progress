- groups ||= 1
- object ||= nil

%table
  - users.in_groups_of(groups, false).each do |people|
    %tr
      - people.each do |user|
        %td
          %span
            = check_box_tag "#{object.class.to_s.downcase}[user_ids][]", user.id, object.users.include?(user) if object
            %span
              = image_tag gravatar_url(user.email), :style => 'width:30px;vertical-align: middle;'
              %br
              = link_to h(user.login), user
