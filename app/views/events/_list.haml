- show_project ||= false

%table.ui-widget-content.widget{:width => '100%'}
  - events.each do |event|
    %tr
      %td{:style => 'width: 2%;'}
        %div{:style => "height: 20px; width: 20px; background-color: ##{event.project.colour}"}

      %td{:style => 'width: 20%;' + event.style}= link_to event.name, project_event_path(event.project, event)

      %td{:style => 'width: 28%;text-align:middle;'}= event.date

      %td{:style => 'width: 30%; text-align:middle;'}
        = collection_widget_for event.users, :object => event, :hide => true

      %td{:style => 'width: 20%;text-align:right;'}
