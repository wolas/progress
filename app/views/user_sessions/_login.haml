- form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  .attribute
    .name= f.label :login
    .value= f.text_field :login, :size => 20
  .attribute
    .name= f.label :password
    .value= f.password_field :password, :size => 20

  .attribute
    .name= f.label :remember_me
    .value= f.check_box :remember_me

  = f.submit "Login"
