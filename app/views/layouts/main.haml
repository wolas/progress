!!!
%html
  %head
    %title
      Progress - Project Management
      - if logged_in?
        \-
        = current_user.login

    = stylesheet_link_tag 'jquery_grey', 'main', 'colorpicker'
    = javascript_include_tag :defaults
    = javascript_include_tag 'colorpicker'
    %script{:type => "text/javascript"} $(function() {$(".draggable").draggable();});

    = javascript_include_tag "http://static.simile.mit.edu/timeline/api-2.3.0/timeline-api.js?bundle=true" if @show_timeline


  %body
    #header
      #logo= image_tag 'logo.png'

      - if logged_in?
        %div{:class=>"corner userbox"}
          .box
            .gravatar= gravatar_for current_user, :width => '40'
            .top
              .name= link_to current_user.name
              .links
                = link_to 'Logout', logout_url
                |
                = link_to 'Account', account_url
                |
                = link_to_unless_current 'Dashboard', dashboard_url

            .bottom
              .select
                .site_links
                  = link_to_unless_current 'Users', users_url
                  |
                  = link_to_unless_current 'Clients', clients_url
                  |
                  = link_to_unless_current 'Projects', projects_url
                  - if admin?
                    %br
                    = link_to_unless_current 'Roles', roles_url

              .inbox
                %span Foo

    .flash
      - if notice = flash[:notice]
        .ui-state-highlight.widget
          %p
            %span{:class => "ui-icon ui-icon-info", :style => "float: left; margin-right: 0.3em;"}
            = notice

      - if error = flash[:error]
        .ui-state-error.widget
          %p
            %span{:class => "ui-icon ui-icon-alert", :style => "float: left; margin-right: 0.3em;"}
            = error


    #content= yield
