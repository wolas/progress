!!!
%html
  %head
    %title
      Progress - Project Management
      - if logged_in?
        \-
        = current_user.login

    = stylesheet_link_tag 'jquery', 'main', 'colorpicker'
    = javascript_include_tag :defaults
    = javascript_include_tag 'colorpicker'

    - if @show_timeline
      = javascript_include_tag "http://static.simile.mit.edu/timeline/api-2.3.0/timeline-api.js?bundle=true"
      = javascript_include_tag 'timeline'

  %body{:onload=> 'onLoad();', :onresize=> 'onResize();'}
    - if logged_in?
      #user_badge.ui-widget-content.widget
        .two_col
          %span
            = image_tag gravatar_url(current_user.email), :style => "vertical-align:middle;"
            = link_to h(current_user.login), current_user
        .two_col
          #user_menu
            = link_to 'Logout', logout_url
            |
            = link_to 'Account', account_url
            %br
            = link_to_unless_current 'Users', users_url
            |
            = link_to_unless_current 'Clients', clients_url
            %br
            = link_to_unless_current 'Projects', projects_url
            |
            = link_to_unless_current 'Timeline', timeline_url
            %br
            = link_to_unless_current 'Month', month_calendar_url
            |
            = link_to_unless_current 'Week', week_calendar_url
            %br
            = link_to_unless_current 'Day', day_calendar_url
            |
            = link_to_unless_current 'Dashboard', dashboard_url

    .flash
      - if notice = flash[:notice]
        .ui-state-highlight.widget
          %p
            %span{:class => "ui-icon ui-icon-info", :style => "float: left; margin-right: 0.3em;"}
            = notice

      - if error = flash[:error]
        .ui-state-error.widget
          %p
            %span{:class => "ui-icon ui-icon-alert", :style => "float: left; margin-right: 0.3em;"}
            = error

    %script{:type => "text/javascript"} $(function() {$(".draggable").draggable();});
    #event.draggable.ui-widget-content.widget{:style => 'display: none;z-index: 99999;'}
    #task.draggable.ui-widget-content.widget{:style => 'display: none;z-index: 99999;'}
    #content= yield
