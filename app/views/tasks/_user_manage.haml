%h3 Users

- form_for '/tasks/manage_users', :html => {:id => 'tasks_users_form'} do
  - users.each do |user|
    .attribute
      .value
        = check_box_tag 'user_ids[]', user.id
      .value
        = user.full_name
= observe_form :tasks_users_form, :frequency => 1, :url => {:controller => :tasks, :action => :manage_users}, :update => 'all_tasks', :loading => flash_loader("all_tasks")
