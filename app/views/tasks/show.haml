- content_for :title do
  = render :partial => 'projects/header', :locals => {:task => @task}

%div{:style => 'float:right'}
  = link_to_remote 'Edit', :url => edit_task_path(@task), :method => :get, :update => 'interactive_content', :complete => "$('#interactive_window').show()"
  |
  = link_to_remote 'Users', :url => {:controller => 'users', :action => 'manage', :object_id => @task, :object_class => @task.class}, :update => 'interactive_content', :complete => "$('#interactive_window').show()"

= collection_widget_for @task.users

.clear

#interactive_window.ui-widget-content.widget
  .close_interactive_window
    = link_to_function 'x' do |page|
      - page[:interactive_window].visual_effect :fade, :duration => 0.5
  #interactive_content

#task_show
  .attribute
    .name Start date:
    .value=h @task.start_date
  .attribute
    .name End date:
    .value=h @task.end_date
  .attribute
    .name Project:
    .value=h @task.project.name
  .attribute
    .name Completed:
    .value= @task.completed? ? "yes" : "no"

  - if @task.description
    .attribute
      .name Description:
      .value= @task.description


%p= render :partial => 'comments/list', :locals => {:comments => @task.comments, :owner => @task}
